<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical">
    <!-- First TextView and Second TextView -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Score:\n0"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- First TextView with 1/4 height -->
            <TextView
                android:id="@+id/makeThisFace"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="Make This Face!" />

            <!-- Second TextView with 3/4 height -->
            <TextView
                android:id="@+id/faceToMake"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="ðŸ˜Š"
                android:textSize="48sp" />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="590dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:layout_gravity="center"
            android:layout_marginTop="91dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:visibility="visible"
                app:srcCompat="@drawable/headshot" />

        </androidx.camera.view.PreviewView>

    </FrameLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Time Left:"
        android:textSize="34sp" />

</LinearLayout>